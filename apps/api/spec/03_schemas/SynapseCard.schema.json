{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "SynapseCard.schema.json",
  "title": "SynapseCard",
  "type": "object",
  "required": [
    "from_id",
    "to_id",
    "strength",
    "types",
    "direction",
    "confidence",
    "bridge_statement",
    "evidence"
  ],
  "additionalProperties": false,
  "properties": {
    "from_id": {
      "type": "string"
    },
    "to_id": {
      "type": "string"
    },
    "strength": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "types": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "shared_entity",
          "facet_transform",
          "serp_overlap",
          "task_chain",
          "comparative",
          "problem_solution",
          "intent_shift",
          "perspective_shift",
          "bridge"
        ]
      },
      "minItems": 1
    },
    "direction": {
      "type": "string",
      "enum": [
        "bidirectional",
        "unidirectional"
      ]
    },
    "intent_shift": {
      "type": "string"
    },
    "perspective_shift": {
      "type": "string"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "bridge_statement": {
      "type": "string",
      "minLength": 1
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "source",
          "kind",
          "summary",
          "confidence"
        ],
        "additionalProperties": false,
        "properties": {
          "source": {
            "type": "string"
          },
          "kind": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "value": {},
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    }
  }
}