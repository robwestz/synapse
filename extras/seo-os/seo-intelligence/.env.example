# Competitive Intelligence Maximizer - Environment Variables

# REQUIRED: Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Optional: Voyage AI for specialized embeddings
VOYAGE_API_KEY=pa-your-key-here

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/competitive_intel

# Redis
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# AI Configuration
AI_MODEL_COMPLEX=claude-3-opus-20240229
AI_MODEL_FAST=claude-3-sonnet-20240229
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# File Upload
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=/tmp/competitive-intel-uploads
ALLOWED_EXTENSIONS=csv,xlsx

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Security
SECRET_KEY=change-this-in-production
ALGORITHM=HS256

# NEURAL_DATABASE Integration (optional)
ENABLE_NEURAL_DATABASE=true
NEURAL_DATABASE_URL=postgresql://neural:neural@localhost:5432/neural_memory

# Ahrefs Integration
AHREFS_WORKFLOW_PATH=C:/Users/robin/Videos/SerPopS/.agent/workflows
